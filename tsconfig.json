{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "downlevelIteration": true,
    "lib": ["es6", "dom"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "src/build.ts", "**/*.spec.ts"]
}
